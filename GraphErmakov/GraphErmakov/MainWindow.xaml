<Window x:Class="GraphErmakov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GraphErmakov - Multiple Selection" Height="500" Width="700"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp"
        Background="#2d2d30" Foreground="White">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="#3c3c3c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4a4a4a"/>
                    <Setter Property="BorderBrush" Value="#666666"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2a2a2a"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для выпадающих списков -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#3c3c3c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Стиль для текстовых блоков -->
        <Style x:Key="DarkTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#dddddd"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

        <!-- Стиль для сепараторов -->
        <Style x:Key="DarkSeparator" TargetType="Separator">
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Width" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <Border Grid.Row="0" Background="#3c3c3c" BorderBrush="#555555" BorderThickness="0,0,0,1" Padding="5">
            <StackPanel Orientation="Horizontal">
                <!-- Кнопка курсора отдельно -->
                <Button x:Name="CursorToolButton" Content="🚫 Cursor" 
                        ToolTip="Selection tool"
                        Click="CursorTool_Click" 
                        Width="80" 
                        Style="{StaticResource DarkButton}"
                        Background="#4a4a4a"/>

                <Separator Style="{StaticResource DarkSeparator}"/>

                <!-- Выпадающий список для фигур -->
                <ComboBox x:Name="ToolComboBox" Width="100" Style="{StaticResource DarkComboBox}">
                    <ComboBoxItem Content="Point" Background="#3c3c3c" Foreground="White"/>
                    <ComboBoxItem Content="Line" Background="#3c3c3c" Foreground="White"/>
                    <ComboBoxItem Content="Rectangle" Background="#3c3c3c" Foreground="White"/>
                    <ComboBoxItem Content="Ellipse" Background="#3c3c3c" Foreground="White"/>
                </ComboBox>

                <Button x:Name="UndoButton" Content="Undo" Click="Undo_Click" Width="60" Style="{StaticResource DarkButton}"/>
                <Button x:Name="RedoButton" Content="Redo" Click="Redo_Click" Width="60" Style="{StaticResource DarkButton}"/>

                <Separator Style="{StaticResource DarkSeparator}"/>

                <TextBlock Text="Stroke:" Style="{StaticResource DarkTextBlock}"/>
                <ComboBox x:Name="StrokeColorComboBox" Width="80" Style="{StaticResource DarkComboBox}" SelectionChanged="StrokeColor_SelectionChanged">
                    <ComboBoxItem Background="Black" Content="Black" Foreground="White" IsSelected="True"/>
                    <ComboBoxItem Background="Red" Content="Red" Foreground="White"/>
                    <ComboBoxItem Background="Blue" Content="Blue" Foreground="White"/>
                    <ComboBoxItem Background="Green" Content="Green" Foreground="White"/>
                    <ComboBoxItem Background="Purple" Content="Purple" Foreground="White"/>
                </ComboBox>

                <TextBlock Text="Fill:" Style="{StaticResource DarkTextBlock}"/>
                <ComboBox x:Name="FillColorComboBox" Width="80" Style="{StaticResource DarkComboBox}" SelectionChanged="FillColor_SelectionChanged">
                    <ComboBoxItem Background="Transparent" Content="None" Foreground="White" IsSelected="True"/>
                    <ComboBoxItem Background="Red" Content="Red" Foreground="White"/>
                    <ComboBoxItem Background="Blue" Content="Blue" Foreground="White"/>
                    <ComboBoxItem Background="Green" Content="Green" Foreground="White"/>
                    <ComboBoxItem Background="Yellow" Content="Yellow" Foreground="Black"/>
                </ComboBox>

                <Button Content="Clear Selection" Click="ClearSelection_Click" Width="100" Style="{StaticResource DarkButton}"/>
                <Button Content="Bring to Front" x:Name="BringToFrontButton" Click="BringToFront_Click" Width="100" Style="{StaticResource DarkButton}" Visibility="Collapsed"/>
                <Button Content="Send to Back" x:Name="SendToBackButton" Click="SendToBack_Click" Width="100" Style="{StaticResource DarkButton}" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Холст для рисования -->
        <Canvas Grid.Row="1" x:Name="DrawingCanvas" 
                Background="#1e1e1e"
                MouseDown="DrawingCanvas_MouseDown"
                MouseMove="DrawingCanvas_MouseMove"
                MouseUp="DrawingCanvas_MouseUp"/>

        <!-- Строка состояния -->
        <StatusBar Grid.Row="2" Background="#3c3c3c" Foreground="#dddddd" BorderBrush="#555555" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock x:Name="SelectionInfoText" Text="No selection" Foreground="#dddddd"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="| Ctrl+Tab: Cycle selection | Ctrl+Click: Multiple | Backspace: Delete |" Foreground="#aaaaaa"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>