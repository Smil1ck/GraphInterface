<Window x:Class="GraphErmakov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GraphErmakov - Multiple Selection" Height="500" Width="700"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray" Margin="5">
            <!-- Кнопка курсора отдельно -->
            <Button x:Name="CursorToolButton" Content="🚫 Cursor" 
                    ToolTip="Selection tool"
                    Click="CursorTool_Click" 
                    Margin="5" Width="80" Background="LightBlue"/>

            <Separator Margin="5,0" Width="2" Background="DarkGray"/>

            <!-- Выпадающий список для фигур -->
            <ComboBox x:Name="ToolComboBox" Width="100" Margin="5">
                <ComboBoxItem Content="Point"/>
                <ComboBoxItem Content="Line"/>
                <ComboBoxItem Content="Rectangle"/>
                <ComboBoxItem Content="Ellipse"/>
            </ComboBox>

            <Button x:Name="UndoButton" Content="Undo" Click="Undo_Click" Margin="5" Width="60"/>
            <Button x:Name="RedoButton" Content="Redo" Click="Redo_Click" Margin="5" Width="60"/>

            <Separator Margin="10,0" Width="2" Background="DarkGray"/>

            <TextBlock Text="Stroke:" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <ComboBox x:Name="StrokeColorComboBox" Width="80" Margin="5" SelectionChanged="StrokeColor_SelectionChanged">
                <ComboBoxItem Background="Black" Content="Black" IsSelected="True"/>
                <ComboBoxItem Background="Red" Content="Red"/>
                <ComboBoxItem Background="Blue" Content="Blue"/>
                <ComboBoxItem Background="Green" Content="Green"/>
                <ComboBoxItem Background="Purple" Content="Purple"/>
            </ComboBox>

            <TextBlock Text="Fill:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="FillColorComboBox" Width="80" Margin="5" SelectionChanged="FillColor_SelectionChanged">
                <ComboBoxItem Background="Transparent" Content="None" IsSelected="True"/>
                <ComboBoxItem Background="Red" Content="Red"/>
                <ComboBoxItem Background="Blue" Content="Blue"/>
                <ComboBoxItem Background="Green" Content="Green"/>
                <ComboBoxItem Background="Yellow" Content="Yellow"/>
            </ComboBox>

            <Button Content="Clear Selection" Click="ClearSelection_Click" Margin="5" Width="100"/>
            <Button Content="Bring to Front" x:Name="BringToFrontButton" Click="BringToFront_Click" Margin="5" Width="100" Visibility="Collapsed"/>
            <Button Content="Send to Back" x:Name="SendToBackButton" Click="SendToBack_Click" Margin="5" Width="100" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Холст для рисования -->
        <Canvas Grid.Row="1" x:Name="DrawingCanvas" 
                Background="White"
                MouseDown="DrawingCanvas_MouseDown"
                MouseMove="DrawingCanvas_MouseMove"
                MouseUp="DrawingCanvas_MouseUp"/>

        <!-- Строка состояния -->
        <StatusBar Grid.Row="2" Background="LightBlue">
            <StatusBarItem>
                <TextBlock x:Name="SelectionInfoText" Text="No selection"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="| Ctrl+Tab: Cycle selection | Ctrl+Click: Multiple | Backspace: Delete |"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>